@using ToplearnBlogProject.UI.Shared.Dashboard.Layouts
@layout DashboardLayout
@page "/dashboard/roles/edit/{Id:int}"

<section class="py-4">
    <div class="container">
        <div class="row pb-4">
            <div class="col-12">
                <h1 class="mb-0 h3">ویرایش نقش</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="card border">
                    <div class="card-body">
                        @if (Role != null)
                        {
                            <RoleForm Role="Role" RoleCallback="Update" />

                        }
                        <MudOverlay @bind-Visible="showProgress" LightBackground="true" AutoClose="true">
                            <MudProgressCircular Color="Color.Primary" Size="Size.Small" Indeterminate="true" />
                        </MudOverlay>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>